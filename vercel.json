{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/index.ts"
    },
    {
      "source": "/",
      "destination": "/client/build/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/index.html"
    }
  ],
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "client/build" }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ]
}