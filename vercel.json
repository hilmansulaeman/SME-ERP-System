{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ],
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "includeFiles": "client/**" }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ]
}
